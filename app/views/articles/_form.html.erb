<%= form_for(@articles) do |f| %>
    <ul>
        <% @articles.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>

    <p>
        <%= f.label :title %> <br />
        <%= f.text_field :title %> <br />
    </p>

    <p>
        <%= f.label :body %> <br />
        <%= f.text_area :body %> <br />
    </p>

    <p>
        <%= f.label :tag_list %><br />
        <%= f.text_field :tag_list %>

    </p>

    <p>
        <% f.submit %>
         <input type="submit"> 
    </p>
<% end %>