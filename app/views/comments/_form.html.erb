<h3>Post a Comment</h3>
<p>
<%= form_for [ @articles, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your name "%><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
</p>